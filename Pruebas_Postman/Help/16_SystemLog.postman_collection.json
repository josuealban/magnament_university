{
    "info": {
        "name": "Help - System Log",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Get All System Logs",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/help/system-logs",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "help",
                        "system-logs"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 2xx\", function () {",
                            "    pm.response.to.have.status(/^2/);",
                            "});",
                            "",
                            "pm.test(\"Response time is less than 500ms\", function () {",
                            "    pm.expect(pm.response.responseTime).to.be.below(500);",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        },
        {
            "name": "Create System Log",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"level\": \"INFO\",\n  \"message\": \"System started\",\n  \"context\": \"Main\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/help/system-logs",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "help",
                        "system-logs"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 2xx\", function () {",
                            "    pm.response.to.have.status(/^2/);",
                            "});",
                            "",
                            "pm.test(\"Response time is less than 500ms\", function () {",
                            "    pm.expect(pm.response.responseTime).to.be.below(500);",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000",
            "type": "string"
        }
    ]
}